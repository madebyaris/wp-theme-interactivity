{
    "name": "interactivity-theme/interactivity-theme",
    "description": "Interactive WordPress theme with SPA navigation and Interactivity API",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "squizlabs/php_codesniffer": "^3.13",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "lint:php": "phpcs",
        "lint:php:fix": "phpcbf"
    }
}
